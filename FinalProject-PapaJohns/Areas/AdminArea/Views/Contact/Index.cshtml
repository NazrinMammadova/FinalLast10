@model List<Contact>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Contact table</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt</th>
                                    <th>AddedBy</th>
                                    <th>name</th>
                                    <th>subject</th>
                                    <th>body</th>
                                    <th>email</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var contact in Model)
                                {
                                    <tr>

                                        <td>@contact.CreatedAt</td>
                                        <td>@contact.UpdatedAt</td>
                                        <td>@contact.AddedBy</td>
                                        <td>@contact.Name</td>
                                        <td>@contact.Subject</td>
                                        <td>@contact.Body</td>
                                        <td>@contact.Email</td>



                                        <td>
                                            <a asp-action="delete" asp-route-id="@contact.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-sweep"></i>
                                            </a>

                                            <a asp-action="detail" asp-route-id="@contact.Id" class="btn btn-outline-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>