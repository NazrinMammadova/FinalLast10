@model MenuPicture
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">PizzaPicture table</h4>
                    <a asp-action="create" class="btn btn-outline-success">Create PizzaPicture</a>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>

                                    <th>CreatedAt</th>
                                    <th>AddedBy</th>
                                    <th>UpdateAt</th>
                                    <th>DeleteAt</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>

                            
                                    <tr>

                                        <td>
                                            <img width="150" src="~/assets/img/@Model.MenuPhoto" />
                                        </td>


                                        <td>@Model.CreatedAt</td>
                                        <td>@Model.AddedBy</td>
                                        <td>@Model.UpdatedAt</td>
                                        <td>@Model.DeletedAt</td>


                                        <td>
                                        <a asp-action="update" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>


                                        </td>
                                    </tr>

                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>