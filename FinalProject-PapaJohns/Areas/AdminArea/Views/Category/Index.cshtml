@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category table</h4>
                    <a asp-action ="create"  class="btn btn-outline-success">Create Category</a>
                  
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>

                                    <th>Settings</th>
                              
                                </tr>
                            </thead>
                            <tbody>
                             
                          @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>

                                        <td>
                                            <a asp-action="delete" asp-route-id="@category.Id"  class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-sweep"></i>
                                            </a>
                                            <a asp-action="update" asp-route-id="@category.Id" class="btn btn-outline-warning">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                          
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>