@model List<HomeSlider>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">HomeSlider table</h4>
                    <a asp-action="create" class="btn btn-outline-success">Create HomeSlider</a>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>CreatedAt</th>
                                    <th>AddedBy</th>
                                    <th>UpdateAt</th>
                                    <th>DeleteAt</th>
                                    <th>Settings</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var HomeSlider in Model)
                                {
                                    <tr>

                                        <td>
                                            <img width="150" src="~/assets/img/@HomeSlider.ImageUrl" />
                                        </td>
                                        <td>@HomeSlider.CreatedAt</td>
                                        <td>@HomeSlider.AddedBy</td>
                                        <td>@HomeSlider.UpdatedAt</td>
                                        <td>@HomeSlider.DeletedAt</td>


                                        <td>
                                            <a asp-action="delete" asp-route-id="@HomeSlider.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete-sweep"></i>
                                            </a>
                                            <a asp-action="update" asp-route-id="@HomeSlider.Id" class="btn btn-outline-warning">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a>
                                          
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>