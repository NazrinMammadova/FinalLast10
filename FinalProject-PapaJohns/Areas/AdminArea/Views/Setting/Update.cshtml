@model FinalProject_PapaJohns.Models.Setting

@{
    ViewData["Title"] = "Update Setting";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Setting</h4>
                    <hr />

                    <form asp-action="Update" asp-route-key="@Model.Key" method="post">
                        <div class="form-group" style="display:none;">
                            <label asp-for="Key" class="control-label">Key</label>
                            <input asp-for="Key" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="Value" class="control-label">Value</label>
                            <input asp-for="Value" class="form-control" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update Setting</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
