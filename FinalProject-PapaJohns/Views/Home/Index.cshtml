@using FinalProject_PapaJohns.ViewModels;
@{
    ViewData["Title"] = "Index";
   

}

@model HomeVM
<section id="homeSlider">
    <div class="col-lg-12 col-sm-12 col-md-12">
        <div class="container">
            <div class="row">
                <!-- Swiper -->
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        @foreach (var homeSlider in Model.HomeSliders)
                        {
                            <div class="swiper-slide"><a href=""><img src="~/assets/img/@homeSlider.ImageUrl" alt=""></a></div>


                        }
                       


                    </div>

                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="Services">
    <div class="container">
        <div class="row">
            <h2 class="text-center fw-bold fs-1">Bizim Servislərimiz</h2>
            <p class="text-center text-black fw-bold fs-6"> Acmısınız? Hamının sevimlisi Papa John's. Pizza sifaris edin, ünvana çatdıraq.</p>
            <div class="row g-4 text-center">
                @foreach (var papaService in Model.PapaServices)
                {
                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                        @Html.Raw(papaService.ImageUrl)
                    <div class="media-body">
                        <h3 class="heading">
                            @papaService.Name
                        </h3>
                        <p class="fw-light text-black">@papaService.Desc</p>
                    </div>
                </div>

                    
                }
             
            </div>
        </div>
    </div>
</section>


<section id="pizzaPictures">
    <div class="">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row g-0">

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="row g-0">
                            @foreach (var pizzaPicture in Model.PizzaPictures)
                            {
                                <div class="col-lg-3 col-sm-12 col-md-6 overflow-hidden">
                                    <img src="~/assets/img/@pizzaPicture.ImageUrl" alt="">
                                </div>

                            }
                    
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>

</section>



